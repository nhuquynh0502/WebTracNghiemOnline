
@{
    ViewBag.Title = "QuenMatKhau";
}

<div class="d-flex flex-column align-items-center mt-4">
    <h2 class="mb-3">Quên mật khẩu</h2>
    <form action="/Home/QuenMatKhau" method="post" style="width:500px">
        @if(!string.IsNullOrEmpty(ViewBag.ErrorMessage))
        {
            <div class="form-group form-row">
                <div class="col-12 alert alert-danger">
                    @ViewBag.ErrorMessage
                </div>
            </div>
        }
        <div class="form-group form-row" >
            <label>Nhập Email</label>
            <input type="email" value="" placeholder="Nhập Email" class="form-control" name="Email"/>
        </div>

        <div class="form-group form-row">
            <a href="/Home" class="mr-auto">Hủy</a>
            <button type="submit" class="btn btn-primary">Gửi mật khẩu</button>
        </div>
    </form>
</div>

