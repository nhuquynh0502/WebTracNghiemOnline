
@{
    ViewBag.Title = "DangNhap";
}

<div class="d-flex flex-column align-items-center mt-4" >
    <h2 class="mb-4">Đăng nhập</h2>
    <form action="/Home/DangNhap" method="post" style="width:500px">
        @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
        {
            <div class="form-group form-row">
                <div class="col-12 alert alert-danger">
                    <div class="col-12">
                        @ViewBag.ErrorMessage
                    </div>
                </div>
            </div>
        }
        <div class="form-group form-row ">
            <label>Tên tài khoản</label>
            <input type="text" value="" placeholder="Tên tài khoản" class="form-control" name="TenDangNhap" />
        </div>

        <div class="form-group form-row ">
            <label>Mật khẩu</label>
            <input type="password" value="" placeholder="Mật khẩu" class="form-control" name="MatKhau" />
        </div>

        <div class="form-group form-row">
            <a href="/Home/QuenMatKhau" class="mr-auto">Quên mật khẩu</a>
            <a href="/Home">Hủy</a>
        </div>

        <div class="form-group form-row justify-content-end">
            <button type="submit" class="btn btn-primary" style="width:110px">Đăng nhập</button>
        </div>
    </form>
</div>

